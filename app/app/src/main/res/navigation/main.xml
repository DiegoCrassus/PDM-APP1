<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    app:startDestination="@+id/mainFragment" >

        <fragment
            android:id="@+id/mainFragment"
            android:name="br.com.pdm.ui.fragment.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main" >
                <action
                    android:id="@+id/action_mainFragment_to_loginFragment"
                    app:destination="@id/loginFragment" />
                <action
                    android:id="@+id/action_mainFragment_to_cadastroFragment"
                    app:destination="@id/cadastroFragment" />
        </fragment>

        <fragment
            android:id="@+id/loginFragment"
            android:name="br.com.pdm.ui.fragment.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" >
        </fragment>

        <fragment
            android:id="@+id/cadastroFragment"
            android:name="br.com.pdm.ui.fragment.CadastroFragment"
            android:label="fragment_cadastro"
            tools:layout="@layout/fragment_cadastro" >
        </fragment>

</navigation>

