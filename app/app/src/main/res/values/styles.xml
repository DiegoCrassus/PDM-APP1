<resources>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.PrimaryButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="strokeColor">@color/black</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MyTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#ffffff</item>
        <!-- por enquanto esta assim mas dps vamos fazer uma referencia para a cor do tema para titulos-->
        <item name="textAppearanceCaption">@style/TituloFragmentosOnBoard</item>
    <!-- <style name="Widget.MaterialComponents.Button.OutlinedButton.SecondaryButton"> -->
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/brand_dark_gray_2</item>
    </style>

    <style name="StyleTitulos" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/comicsans</item>
        <item name="android:fontFamily">@font/comici</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="StyleCorpos" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/brand_dark_gray_2</item>
        <item name="fontFamily">@font/courierprime_regular</item>
        <item name="android:fontFamily">@font/courierprime_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="StyleBoxes" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/courierprime_regular</item>
        <item name="android:fontFamily">@font/courierprime_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StyleBCheckBox" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/brand_dark_gray_2</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>