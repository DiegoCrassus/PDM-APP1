<resources>

    <!--
        O arquivo styles.xml deve conter apenas definições para componentes (widgets)
        somente. Nenhum atributo de texto deve ser incluido nesse arquivo.
    -->

    <style name="Widget.MaterialComponents.Button.OutlinedButton.PrimaryButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/roxoBotao</item>
        <item name="strokeColor">@color/black</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MyTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#A863D5</item>
        <!-- por enquanto esta assim mas dps vamos fazer uma referencia para a cor do tema para titulos-->
        <item name="android:textAppearance">@style/TituloFragmentosOnBoard</item>
    </style>

</resources>